# ============================================================
# 텔레그램 API 설정 (필수)
# ============================================================
# https://my.telegram.org/auth 에서 발급받으세요
# 1. 전화번호로 로그인
# 2. "API development tools" 클릭
# 3. 앱 생성 (이름은 아무거나)
# 4. api_id와 api_hash 복사

API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890
SESSION_NAME=telegram_trading_session

# ============================================================
# 텔레그램 채널 ID 설정
# ============================================================
# 채널 ID 확인 방법:
# 1. Telegram Web (https://web.telegram.org/a/) 접속
# 2. 채널 클릭
# 3. URL에서 숫자 부분 복사 (예: #-1003259607619)

SOURCE_CHANNEL=-1003259607619  # 매수 신호를 받을 채널 (필수)
TARGET_CHANNEL=-1003244607110  # 알림을 보낼 채널 (선택)

# ============================================================
# 메시지 전달 설정
# ============================================================
# SOURCE_CHANNEL에서 받은 메시지를 TARGET_CHANNEL로 자동 전송
# true: 활성화, false: 비활성화 (기본값)
# 활성화 시 API_ID, API_HASH, TARGET_CHANNEL 필수

ENABLE_MESSAGE_FORWARDING=false

# ============================================================
# 키움증권 자동매매 설정 (선택)
# ============================================================

# 모의투자/실전투자 선택
USE_MOCK=false

# 디버그 모드
DEBUG=true

# 실전투자 API KEY
KIWOOM_APP_KEY=your_real_app_key
KIWOOM_SECRET_KEY=your_real_secret_key

# 모의투자 API KEY
KIWOOM_MOCK_APP_KEY=your_mock_app_key
KIWOOM_MOCK_SECRET_KEY=your_mock_secret_key

# 자동매매 설정
ACCOUNT_NO=12345678-01
MAX_INVESTMENT=2000000
TARGET_PROFIT_RATE=1.0

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WEBSOCKET_PORT=8765

# 모니터링 설정
MARKET_OPEN_TIME=09:00
MARKET_CLOSE_TIME=15:30
BUY_START_TIME=09:00
BUY_END_TIME=09:10

# 매도 모니터링
ENABLE_SELL_MONITORING=true
ENABLE_STOP_LOSS=true
STOP_LOSS_RATE=-2.5

# 일일 강제 청산
ENABLE_DAILY_FORCE_SELL=true
DAILY_FORCE_SELL_TIME=15:19

# 실시간 체결 정보 검증
ENABLE_LAZY_VERIFICATION=false
