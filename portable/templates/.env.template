# ============================================
# 자동매매 시스템 환경 변수 설정 파일
# ============================================
#
# 이 파일은 템플릿입니다.
# "설정하기" GUI를 실행하여 자동으로 설정하세요.
#
# 수동 설정 시 아래 값들을 채워주세요.
# ============================================

# ===== 모의투자/실전투자 선택 =====
USE_MOCK=true

# ===== 디버그 모드 =====
DEBUG=false

# ===== 실전투자 API KEY =====
KIWOOM_APP_KEY=
KIWOOM_SECRET_KEY=

# ===== 모의투자 API KEY =====
KIWOOM_MOCK_APP_KEY=
KIWOOM_MOCK_SECRET_KEY=

# ===== 자동매매 설정 =====
ACCOUNT_NO=
MAX_INVESTMENT=2000000
TARGET_PROFIT_RATE=1.0

# ===== 매수 가능 시간 설정 =====
BUY_START_TIME=08:50
BUY_END_TIME=12:10

# ===== 매수 주문 타입 설정 (v1.6.0) =====
BUY_ORDER_TYPE=market
BUY_EXECUTION_TIMEOUT=30
BUY_EXECUTION_CHECK_INTERVAL=5
BUY_FALLBACK_TO_MARKET=true

# ===== 매도 모니터링 설정 =====
ENABLE_SELL_MONITORING=true

# ===== 손절 설정 =====
ENABLE_STOP_LOSS=true
STOP_LOSS_RATE=-2.5

# ===== 일일 강제 청산 설정 =====
ENABLE_DAILY_FORCE_SELL=true
DAILY_FORCE_SELL_TIME=15:19

# ===== 미체결 주문 처리 설정 =====
CANCEL_OUTSTANDING_ON_FAILURE=true
OUTSTANDING_CHECK_TIMEOUT=30
OUTSTANDING_CHECK_INTERVAL=5

# ===== 실시간 체결 정보 검증 설정 =====
ENABLE_LAZY_VERIFICATION=false

# ===== 주기적 평균단가 업데이트 설정 =====
BALANCE_CHECK_INTERVAL=0

# ===== Telegram API 설정 =====
API_ID=
API_HASH=
SESSION_NAME=channel_copier

# ===== Telegram 채널 설정 =====
SOURCE_CHANNEL=
TARGET_CHANNEL=
