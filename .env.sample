# 모의투자 설정 (true: 모의투자, false: 실전투자)
USE_MOCK=false

# 디버그 모드 (true: 실시간 시세 계속 출력, false: 출력 안함)
DEBUG=false

# 실전투자 API KEY
KIWOOM_APP_KEY=your_real_app_key_here
KIWOOM_SECRET_KEY=your_real_secret_key_here

# 모의투자 API KEY
KIWOOM_MOCK_APP_KEY=your_mock_app_key_here
KIWOOM_MOCK_SECRET_KEY=your_mock_secret_key_here

# 자동매매 설정
ACCOUNT_NO=1234-5678             # 계좌번호
MAX_INVESTMENT=2000000           # 투자금 (기본: 2,000,000원)
TARGET_PROFIT_RATE=2.0           # 목표 수익률 (%) - 기본값: 2.0%

# 텔레그램 채널 설정 (telegram_auto_trading.py 전용)
TELEGRAM_CHANNEL_ID=-1002680666401  # 텔레그램 채널 ID (예: -1002680666401)
                                    # 확인 방법: 텔레그램 웹에서 채널 접속 → URL의 # 뒤 숫자 복사

# 매수 가능 시간 설정
BUY_START_TIME=09:00             # 매수 시작 시간
BUY_END_TIME=09:10               # 매수 종료 시간

# 매도 모니터링 설정
ENABLE_SELL_MONITORING=true      # 자동 매도 모니터링 활성화 (true: 활성화, false: 비활성화)

# 손절 설정
ENABLE_STOP_LOSS=true            # 손절 모니터링 활성화 (true: 활성화, false: 비활성화)
STOP_LOSS_RATE=-2.5              # 손절 수익률 (%) - 기본값: -2.5%

# 일일 강제 청산 설정
ENABLE_DAILY_FORCE_SELL=true     # 일일 강제 청산 활성화 (true: 활성화, false: 비활성화)
DAILY_FORCE_SELL_TIME=15:19      # 강제 청산 시간 (기본값: 15:19 - 장마감 11분 전)

# 미체결 주문 처리 설정
CANCEL_OUTSTANDING_ON_FAILURE=true   # 미체결 시 주문 취소 여부 (true: 취소 후 재모니터링, false: 주문 유지하고 재모니터링)
OUTSTANDING_CHECK_TIMEOUT=30         # 체결 확인 타임아웃 (초) - 기본값: 30초
OUTSTANDING_CHECK_INTERVAL=5         # 체결 확인 주기 (초) - 기본값: 5초

# 실시간 체결 정보 검증 설정
ENABLE_LAZY_VERIFICATION=false       # 실시간 체결 정보 자동 검증 (true: 개선 모드 - 즉시 모니터링 + 자동 업데이트, false: 기존 모드 - 추정값만 사용)

# 주기적 평균단가 업데이트 설정 (v1.4.0 - v1.5.0부터 기본 비활성화)
BALANCE_CHECK_INTERVAL=0             # 계좌 조회 주기 (초) - 수동 매수 시 평균 매입단가 자동 반영 (기본값: 0=비활성화, >0: 활성화)
                                     # ⚡ 성능: 비활성화 시 매매 타이밍 최대 360ms 향상 (익절/손절 실행 시 계좌 조회 제거)
                                     # 💡 사용법: 수동 매수 시 프로그램 재시작으로 자동 반영